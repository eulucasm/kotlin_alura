<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.FormularioProdutoActivity">

    <EditText
        android:id="@+id/nome_formulario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="@string/nome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/descricao_formulario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/descricao"
        app:layout_constraintEnd_toEndOf="@+id/nome_formulario"
        app:layout_constraintStart_toStartOf="@+id/nome_formulario"
        app:layout_constraintTop_toBottomOf="@+id/nome_formulario" />

    <EditText
        android:id="@+id/valor_formulario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/valor"
        app:layout_constraintEnd_toEndOf="@+id/descricao_formulario"
        app:layout_constraintStart_toStartOf="@+id/descricao_formulario"
        app:layout_constraintTop_toBottomOf="@+id/descricao_formulario" />

</androidx.constraintlayout.widget.ConstraintLayout>